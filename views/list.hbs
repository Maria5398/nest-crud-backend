{{#> layout }}
  {{#*inline "content"}}
    <div class="row mb-2">

        {{> styles}}
        <div class="crear-user">
            <h2>Listado</h2>
            <br>
            <a href="/post/prueba" class="btn-show">Crear user</a>
        </div>

        {{#if data }}
            <table>
                <tr>
                    <th>id</th>
                    <th>slug</th>
                    <th>title</th>
                    <th>excerpt</th>
                    <th>content</th>
                    <th>category</th>
                    <th>tags</th>
                    <th>status</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
                {{#each data}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{slug}}</td>
                    <td>{{title}}</td>
                    <td>{{excerpt}}</td>
                    <td>{{content}}</td>
                    <td>{{category}}</td>
                    <td>{{tags}}</td>
                    <td>{{status}}</td>         
                    <td class="buttons"><a href="" class="btn-edit">Editar</a></td>
                    <td class="buttons">
                        <form action="/post/prueba" method="DELETE">
                            <button class="btn btn-success btn-block waves-effect waves-light" type="submit">Eliminar</button>
                        </form>
                       
                    </td>    
                </tr>
                    
                {{/each}}
            </table>       
        {{else}}
        <p>no hay datos</p>
        {{/if}}
    </div>
  {{/inline}}
{{/layout}}
