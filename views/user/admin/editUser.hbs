{{#> layout }}
  {{#*inline "content"}}
    <div class="row mb-2">


        <div class="wrapper-page">

        <div class="account-bg">
                <div class="card-box mb-0">
                    <div class="text-center m-t-20">
                        <a href="index.html" class="logo">
                            <i class="zmdi zmdi-group-work icon-c-logo"></i>
                            <span>Uplon</span>
                        </a>
                    </div>
                    <div class="m-t-10 p-20">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h6 class="text-muted text-uppercase m-b-0 m-t-0">Sign Up</h6>
                            </div>
                        </div>
                        <form class="m-t-20" action="/user/{{this.id}}" method="Put">
                            <input type="hidden" name="_method" value="Put" />
                          

                            <div class="form-group row">
                                <div class="col-12">
                                    <input class="form-control" type="text" required="" placeholder="name" name="name" value="{{name}}">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12">
                                    <input class="form-control" type="text" required="" placeholder="lastName" name="lastName" value="{{lastName}}">
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-12">
                                    <input class="form-control" type="email" required="" placeholder="Email" name="email" value="{{email}}">
                                </div>
                            </div>
                    

                            <div class="form-group text-center row m-t-10">
                                <div class="col-12">
                                    <button class="btn btn-success btn-block waves-effect waves-light" type="submit">Modificar</button>
                                </div>
                            </div>

                        </form>

                    </div>

                    <div class="clearfix"></div>
                </div>
        </div>
        <!-- end card-box-->

        </div>
        <!-- end wrapper page -->
     </div>
  {{/inline}}
{{/layout}}
