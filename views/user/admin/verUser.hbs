{{#> layout }}
  {{#*inline "content"}}
    <div class="row mb-2">


        <div class="wrapper-page">

        <div class="account-bg">
                <div class="card-box mb-0">
                    <div class="text-center m-t-20">
                        <a href="index.html" class="logo">
                            <i class="zmdi zmdi-group-work icon-c-logo"></i>
                            <span>Uplon</span>
                        </a>
                    </div>
                    <div class="m-t-10 p-20">
                        <div class="row">
                            <div class="col-12 text-center">
                                <h6 class="text-muted text-uppercase m-b-0 m-t-0"> User: {{id}}</h6>
                            </div>
                        </div>
                            <hr>
                            <div class="form-group row">
                                <div class="col-12">
                                    Nombre :{{name}}
                                </div>
                            </div>
                            <hr>
                            <div class="form-group row">
                                <div class="col-12">
                                    Apellido :{{lastName}}
                                </div>
                            </div>
                            <hr>
                            <div class="form-group row">
                                <div class="col-12">
                                    Email :{{email}}
                                </div>
                            </div>
                            <hr>
                            <div class="form-group row">
                                <div class="col-12">
                                    Rol : {{#if status}}
                                                User
                                            {{else}}
                                                Admin
                                            {{/if}}
                                </div>
                            </div>
                            <hr>
                            <div class="form-group row">
                                <div class="col-12">
                                    Activo desde :{{createdAt}}
                                </div>
                            </div>
                    

                    </div>

                    <div class="clearfix"></div>
                </div>
        </div>
        <!-- end card-box-->

        </div>
        <!-- end wrapper page -->
     </div>
  {{/inline}}
{{/layout}}
